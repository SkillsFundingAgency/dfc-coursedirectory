@model Dfc.CourseDirectory.WebV2.Models.StandardOrFramework

@if (Model.IsStandard)
{
    <input type="hidden" name="StandardOrFrameworkType" value="Standard" />
    <input type="hidden" name="@(nameof(Model.Standard.StandardCode))" value="@Model.Standard.StandardCode" />
    <input type="hidden" name="@(nameof(Model.Standard.Version))" value="@Model.Standard.Version" />
}
else if (Model.IsFramework)
{
    <input type="hidden" name="StandardOrFrameworkType" value="Framework" />
    <input type="hidden" name="@(nameof(Model.Framework.FrameworkCode))" value="@Model.Framework.FrameworkCode" />
    <input type="hidden" name="@(nameof(Model.Framework.ProgType))" value="@Model.Framework.ProgType" />
    <input type="hidden" name="@(nameof(Model.Framework.PathwayCode))" value="@Model.Framework.PathwayCode" />
}