@{
    ViewBag.Title = "Helpdesk dashboard";
}

<div class="govuk-grid-row govuk-!-margin-bottom-2 pttcd-provider-dashboard__row">
    <div class="govuk-grid-column-one-third">
        <div class="pttcd-provider-dashboard__card">
            <div class="pttcd-provider-dashboard__card__content">
                <h2 class="govuk-heading-s">Providers</h2>
            </div>
            <div class="pttcd-provider-dashboard__card__actions">
                <ul class="govuk-list pttcd-list--small">
                    <li><a asp-controller="ProviderReports" asp-action="ProviderTypeReport" class="govuk-link" data-testid="download-provider-type-report-link">Provider type report</a></li>
                    <li><a asp-controller="ProviderReports" asp-action="ProvidersMissingPrimaryContact" class="govuk-link" data-testid="download-providers-missing-contact-details-link">Providers missing contact details</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="govuk-grid-column-one-third">
        <div class="pttcd-provider-dashboard__card">
            <div class="pttcd-provider-dashboard__card__content">
                <h2 class="govuk-heading-s">Quality assurance</h2>
            </div>
        </div>
    </div>

    <div class="govuk-grid-column-one-third">
        <div class="pttcd-provider-dashboard__card">
            <div class="pttcd-provider-dashboard__card__content">
                <h2 class="govuk-heading-s">Open data</h2>
            </div>
            <div class="pttcd-provider-dashboard__card__actions">
                <ul class="govuk-list pttcd-list--small">
                    <li><a asp-controller="OpenDataReports" asp-action="LiveCourseProviders" data-testid="download-opendata-live-courseproviders-report-link" class="govuk-link">Live course providers report</a></li>
                    <li><a asp-controller="OpenDataReports" asp-action="LiveCoursesWithRegionsAndVenues" data-testid="download-opendata-live-courses-report-link" class="govuk-link">Live courses report</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="govuk-grid-row govuk-!-margin-bottom-2 pttcd-provider-dashboard__row">
    <div class="govuk-grid-column-one-third">
        <div class="pttcd-provider-dashboard__card">
            <div class="pttcd-provider-dashboard__card__content">
                <h2 class="govuk-heading-s">Courses</h2>
            </div>
            <div class="pttcd-provider-dashboard__card__actions">
                <ul class="govuk-list pttcd-list--small">
                    <li><a asp-controller="CourseReports" asp-action="AllCourses" class="govuk-link" data-testid="download-all-courses-report-link">All courses report</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="govuk-grid-column-one-third">
        <div class="pttcd-provider-dashboard__card">
            <div class="pttcd-provider-dashboard__card__content">
                <h2 class="govuk-heading-s">T Levels</h2>
            </div>
            <div class="pttcd-provider-dashboard__card__actions">
                <ul class="govuk-list pttcd-list--small">
                    <li><a asp-controller="TLevelsReports" asp-action="LiveTLevelsReport" class="govuk-link" data-testid="download-live-tlevels-report-link">Live T Levels</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
