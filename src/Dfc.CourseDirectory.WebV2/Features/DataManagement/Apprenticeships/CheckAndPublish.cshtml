@using Dfc.CourseDirectory.WebV2.Features.DataManagement.Apprenticeships.CheckAndPublish
@model ViewModel
@{
    ViewContext.SetLayoutData(title: "Check and publish your apprenticeship data");
}

<govuk-error-summary>
    <govuk-error-summary-item asp-for="Confirm" />
</govuk-error-summary>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Publish your apprenticeship data</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <form asp-action="CheckAndPublish" asp-all-route-data="@ProviderContext.RouteValues">

            <p class="govuk-body">Publishing your apprenticeship training courses will add them to Publish to the course directory.</p>

            <div class="pttcd-dm-publish-summary">
                <div class="pttcd-dm-publish-summary__row">
                    <div class="pttcd-dm-publish-summary__row__header govuk-!-width-two-thirds">
                        <div class="pttcd-dm-publish-summary__row__label">Your apprenticeship data file</div>
                        <div><span data-testid="RowCount">@Model.ApprenticeshipsCount</span> apprenticeship training course@(Model.ApprenticeshipsCount != 1 ? "s" : "")</div>
                    </div>
                    <div class="pttcd-dm-publish-summary__row__details">
                        <govuk-details>
                            <govuk-details-summary>
                                View list of apprenticeships
                            </govuk-details-summary>
                            <govuk-details-text>
                                <table class="govuk-table">
                                    <thead class="govuk-table__head">
                                        <tr class="govuk-table__row">
                                            <th scope="col" class="govuk-table__header">Apprenticeship</th>
                                            <th scope="col" class="govuk-table__header" style="width: 150px">Delivery method</th>
                                        </tr>
                                    </thead>
                                    <tbody class="govuk-table__body">
                                        @foreach (var row in Model.RowGroups)
                                        {
                                            <tr class="govuk-table__row" data-testid="ApprenticeshipRow">
                                                <td class="govuk-table__cell pttcd-table--no-border govuk-body-s">
                                                    <div>@row.StandardName</div>
                                                    <div>
                                                        <span><strong>Standard Code</strong> @row.StandardCode</span>
                                                        <span><strong>Version</strong> @row.StandardVersion</span>
                                                    </div>
                                                </td>
                                                <td class="govuk-table__cell pttcd-table--no-border"></td>
                                                <td class="govuk-table__cell pttcd-table--no-border"></td>
                                            </tr>
                                            @foreach (var deliveryMethod in row.LocationDeliveryMethods)
                                            {
                                                <tr class="govuk-table__row @(deliveryMethod == row.LocationDeliveryMethods.Last() ? "pttcd-table__row-!-border" : "")" data-testid="ApprenticeshipLocationRow">
                                                    <td class="govuk-table__cell pttcd-table--no-border govuk-body-s"></td>
                                                    <td class="govuk-table__cell pttcd-table--no-border govuk-body-s">
                                                        @(deliveryMethod == ApprenticeshipLocationType.ClassroomBased ? "Classroom" : deliveryMethod == ApprenticeshipLocationType.EmployerBased ? "Employer" : "Both")
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </govuk-details-text>
                        </govuk-details>
                    </div>
                </div>
            </div>

            <govuk-warning-text icon-fallback-text="warning">
                Publishing will replace all of your apprenticeships on Publish to the course directory
            </govuk-warning-text>

            <govuk-checkboxes class="govuk-checkboxes--small" asp-for="Confirm">
                <govuk-checkboxes-fieldset>
                    <govuk-checkboxes-fieldset-legend class="govuk-fieldset__legend--m">
                        <h2 class="govuk-fieldset__heading">
                            Are you sure?
                        </h2>
                    </govuk-checkboxes-fieldset-legend>
                </govuk-checkboxes-fieldset>
                <govuk-checkboxes-item value="@(true)">
                    Yes - I want to publish these apprenticeships
                </govuk-checkboxes-item>
            </govuk-checkboxes>

            <govuk-button type="submit" prevent-double-click="true" id="pttcd-publish-apps-btn" class="govuk-!-margin-right-3">Publish</govuk-button>

            <govuk-button asp-controller="ProviderDashboard" asp-action="Index" asp-all-route-data="@ProviderContext.RouteValues" class="govuk-button--secondary" data-testid="cancel-btn">Cancel</govuk-button>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function enableDeleteBtn() {
            $('#pttcd-publish-apps-btn').attr(
                'disabled',
                $('#Confirm').is(':checked') ? null : 'disabled');
        }

        // timeout is required otherwise the _checked_ property check doesn't return the correct value
        // (maybe GDS scripts need chance to run?)
        setTimeout(enableDeleteBtn, 100);

        $('#Confirm').change(enableDeleteBtn);
    </script>
}
