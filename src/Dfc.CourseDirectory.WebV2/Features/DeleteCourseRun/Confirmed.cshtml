@model Dfc.CourseDirectory.WebV2.Features.DeleteCourseRun.ConfirmedViewModel
@{
    Layout = "_V2LayoutProviderContext";
    ViewBag.Title = "Your course has been deleted";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <govuk-panel>
            <govuk-panel-title>Your course has been deleted</govuk-panel-title>
            <span data-testid="CourseName">@Model.CourseName</span>
        </govuk-panel>

        <h2 class="govuk-heading-m">What next?</h2>

        <ul class="govuk-list">
            <li>
                <a asp-controller="RegulatedQualification" asp-action="Index" class="govuk-link">
                    Add a new course
                </a>
            </li>
            @if (Model.HasOtherCourseRuns)
            {
                <li>
                    <a asp-controller="ProviderCourses" asp-action="Index" class="govuk-link" data-testid="ViewEditCopyDeleteLink">
                        View, edit, copy or delete a course
                    </a>
                </li>
            }
            <li>
                <a href="/" class="govuk-link">
                    Back to the home screen
                </a>
            </li>
        </ul>
    </div>
</div>
