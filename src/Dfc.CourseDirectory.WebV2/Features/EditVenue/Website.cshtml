@model Dfc.CourseDirectory.WebV2.Features.EditVenue.Website.Command
@{
    ViewContext.SetLayoutData(title: "Website");
}

@if (!ViewData.ModelState.IsValid)
{
    <govuk-error-summary>
        <govuk-error-summary-title>There is a problem</govuk-error-summary-title>
        <govuk-error-summary-item asp-for="Website" />
    </govuk-error-summary>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="Website" asp-route-venueId="@Model.VenueId">
            <govuk-input asp-for="Website" input-class="govuk-input--width-20">
                <govuk-input-label class="govuk-label--l">Website</govuk-input-label>
                <govuk-input-hint>For example https://www.venue.com</govuk-input-hint>
            </govuk-input>

            <govuk-button type="submit" class="govuk-!-margin-right-1">Continue</govuk-button>
            <govuk-button asp-action="Details" asp-route-venueId="@Model.VenueId" class="govuk-button--secondary">Cancel</govuk-button>
        </form>
    </div>
</div>