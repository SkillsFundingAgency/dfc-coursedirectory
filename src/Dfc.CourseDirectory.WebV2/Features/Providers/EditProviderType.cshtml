@model Dfc.CourseDirectory.WebV2.Features.Providers.EditProviderType.Command
@{ 
    ViewBag.Title = "Provider type settings";
}

<govuk-error-summary>
    <govuk-error-summary-item asp-for="ProviderType" />
</govuk-error-summary>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-xl">Course Directory</span>
        <h1 class="govuk-heading-l">Provider type settings</h1>

        <form asp-action="Post" asp-all-route-data="@ProviderContext.RouteValues">
            <govuk-radios asp-for="ProviderType">
                <govuk-radios-item value="@ProviderType.Apprenticeships" input-data-testid="apprenticeships">
                    Apprenticeships
                </govuk-radios-item>
                <govuk-radios-item value="@ProviderType.FE" input-data-testid="fe">
                    F.E.
                </govuk-radios-item>
                <govuk-radios-item value="@(ProviderType.Apprenticeships | ProviderType.FE)" input-data-testid="fe+apprenticeships">
                    Both
                </govuk-radios-item>
            </govuk-radios>

            <govuk-button type="submit" class="govuk-!-margin-right-1">Save</govuk-button>
            <govuk-button asp-controller="Providers" asp-action="ProviderDetails" asp-all-route-data="@ProviderContext.RouteValues" class="govuk-button--secondary">Cancel</govuk-button>
        </form>
    </div>
</div>
