@using Dfc.CourseDirectory.Core.Models;
@using Dfc.CourseDirectory.Web.Helpers;
@model Dfc.CourseDirectory.WebV2.ViewComponents.Courses.EducationLevel.EducationLevelModel

<div class="govuk-form-group" id="EducationLevel">

    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            <h2 class="govuk-fieldset__heading govuk-heading-m">
                @Model.LabelText
            </h2>
        </legend>
        <div class="govuk-hint">
            @Model.HintText
        </div>
        <div class="govuk-radios govuk-radios" val-required-message="Select Education level" id="EducationLevelRadioButtons">
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.EntryLevel, new { @class = "govuk-radios__input", id = EducationLevel.EntryLevel })
                <label class="govuk-label govuk-radios__label" for="@EducationLevel.EntryLevel">@EducationLevel.EntryLevel.ToDescription()</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.One, new { @class = "govuk-radios__input", id = EducationLevel.One })
                <label class="govuk-label govuk-radios__label" for="@EducationLevel.One">@EducationLevel.One.ToDescription()</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.Two, new { @class = "govuk-radios__input", id = EducationLevel.Two })
                <label class="govuk-label govuk-radios__label" for="@EducationLevel.Two">@EducationLevel.Two.ToDescription()</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.Three, new { @class = "govuk-radios__input", id = EducationLevel.Three })
                <label class="govuk-label govuk-radios__label" for="@EducationLevel.Three">@EducationLevel.Three.ToDescription()</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.Four, new { @class = "govuk-radios__input", id = EducationLevel.Four })
