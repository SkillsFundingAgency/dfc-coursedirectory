            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.Six, new { @class = "govuk-radios__input", id = EducationLevel.Six })
                <label class="govuk-label govuk-radios__label" for="@EducationLevel.Six">@EducationLevel.Six.ToDescription()</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.EducationLevel, EducationLevel.Seven, new { @class = "govuk-radios__input", id = EducationLevel.Seven })
                <label class="govuk-label govuk-radios__label" for="@EducationLevel.Seven">@EducationLevel.Seven.ToDescription()</label>
            </div>
        </div>
    </fieldset>
</div>
