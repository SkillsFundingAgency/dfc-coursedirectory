@model Dfc.CourseDirectory.WebV2.ViewModels.Providers.DisplayName.ViewModel
@{
    ViewContext.SetLayoutData(title: "Display name");
}

@section BackLink {
    <pttcd-back-link />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="DisplayName" asp-all-route-data="@ProviderContext.RouteValues">
            <govuk-radios asp-for="DisplayNameSource">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend class="govuk-fieldset__legend--xl">
                        <h1 class="govuk-fieldset__heading">
                            Display name
                        </h1>
                    </govuk-radios-fieldset-legend>
                
                    <govuk-radios-hint>
                        Select the name you would like displayed to learners.
                    </govuk-radios-hint>
                    <govuk-radios-item value="@(ProviderDisplayNameSource.ProviderName)" id="ProviderName">
                        @Model.ProviderName
                    </govuk-radios-item>
                    <govuk-radios-item value="@(ProviderDisplayNameSource.TradingName)" id="TradingName">
                        @Model.TradingName
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <govuk-button type="submit">Save and continue</govuk-button>
        </form>
    </div>
</div>
