@model Dfc.CourseDirectory.Web.Components.LarsSearchResult.LarsSearchResultModel;


<div class="govuk-grid-row">

    @if (Model.HasErrors)
    {
        <div class="govuk-grid-column-full">
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    Sorry, there was a problem.
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        @foreach (var error in Model.Errors)
                        {
                            <li>
                                @error
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
    else if (Model.Items.Count() > 0)
    {
        <div class="govuk-grid-column-one-quarter">

            @if (Model.Filters != null)
            {
                foreach (var filter in Model.Filters)
                {
                    <div class="govuk-form-group govuk-!-font-size-14">
                        <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                                <h2 class="govuk-fieldset__heading">
                                    @filter.Title
                                </h2>
                            </legend>
                            <span id="waste-hint" class="govuk-hint govuk-!-font-size-14">
                                Select all that apply.
                            </span>
                            <div class="govuk-checkboxes">

                                @foreach (var item in filter.Items)
                                {
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" id="@item.Id" name="@item.Name" type="checkbox" value="@item.Value">
                                        <label class="govuk-label govuk-checkboxes__label govuk-!-font-size-14" for="@item.Id">
                                            @item.Text (@item.Count)
                                        </label>
                                    </div>
                                }

                            </div>
                        </fieldset>
                    </div>
                }
            }

        </div>

        <div class="govuk-grid-column-three-quarters">
            <table class="govuk-table govuk-!-font-size-14">
                <caption class="govuk-table__caption govuk-heading-s govuk-!-font-weight-regular">
                    Found <span class="govuk-!-font-weight-bold">@Model.TotalCount</span> results for <span class="govuk-!-font-weight-bold">@Model.SearchTerm</span>
                </caption>
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="col" width="19%">Learning Aim Ref.</th>
                        <th class="govuk-table__header" scope="col" width="40%">Learning Aim Title</th>
                        <th class="govuk-table__header" scope="col" width="15%">NVQ Level V2</th>
                        <th class="govuk-table__header" scope="col">Award Org.</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @foreach (var item in Model.Items)
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">@item.LearnAimRef</td>
                            <td class="govuk-table__cell">@item.LearnAimRefTitle</td>
                            <td class="govuk-table__cell">@item.NotionalNVQLevelv2</td>
                            <td class="govuk-table__cell">@item.AwardOrgName (@item.AwardOrgCode)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>