@page
@model RegisterModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h4 class="govuk-heading-m">Create a new account.</h4>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="govuk-input" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="govuk-input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="govuk-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="govuk-button">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
