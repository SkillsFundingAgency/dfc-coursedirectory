@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-m">Reset your password.</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
            <input asp-for="Input.Email" type="hidden"/>

            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="govuk-input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="govuk-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="govuk-button">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
