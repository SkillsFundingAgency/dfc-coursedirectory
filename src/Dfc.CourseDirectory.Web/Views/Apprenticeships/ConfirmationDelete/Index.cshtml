@using Dfc.CourseDirectory.Services.Models
@using Dfc.CourseDirectory.Web.Helpers
@{
    ViewData["Title"] = "Apprenticeship deleted"; 
    Layout = "_Layout_Your_Courses";
}

@model Dfc.CourseDirectory.Web.ViewModels.Apprenticeships.DeleteConfirmViewModel

<form class="govuk-!-margin-bottom-9" id="ApprenticeshipConfirmDeleteForm" asp-controller="Apprenticeships" asp-action="ConfirmationDelete" method="post">
<div class="cd-dashboard provider apprenticeship-type govuk-grid-row">
        <div class="govuk-grid-column">

                    <div class="govuk-grid-row">
                        <div class="">
                            <div class="govuk-panel govuk-panel--confirmation">
                                <h1 class="govuk-panel__title">
                                    Apprenticeship deleted

                                </h1>
                                <div class="govuk-panel__body">
                                    <strong> @Model.ApprenticeshipTitle</strong> has been deleted from the Course directory
                                </div>
                            </div>

                            <h2 class="govuk-heading-m">Next steps</h2>

                            <p class="govuk-body">
                                <a class="govuk-link" asp-controller="ProviderApprenticeships" asp-action="Index">
                                    Delete another apprenticeship
                                </a><br />
                                <a class="govuk-link" asp-controller="Home" asp-action="Index">
                                    Return to dashboard
                                </a>
                            </p>
                        </div>
                    </div>

        </div>
    </div>
</form>
