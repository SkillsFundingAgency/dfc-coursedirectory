
@using Dfc.CourseDirectory.Web.ViewComponents.VenueAddressSelectionConfirmation

@{
    if (Model.Id != null)
    {
        ViewData["Title"] = "Edit location details";
    } else {
        ViewData["Title"] = "Add a location";
    }
    Layout = "_Layout_Your_Courses";
}
@model VenueAddressSelectionConfirmationViewModel


<div class="govuk-grid-row">

    <div class="govuk-grid-column-two-thirds">
        @{
            if (Model.Id != null) {
                <h1 class="govuk-heading-l">Edit location details</h1>
            } else {
                <h1 class="govuk-heading-l">Add a location</h1>
            }
        }

        @await Component.InvokeAsync(nameof(VenueAddressSelectionConfirmation), new VenueAddressSelectionConfirmationModel
        {
            Address = Model.Address,
            VenueName = Model.VenueName
        })
    </div>
</div>
