@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Identity
@using Dfc.CourseDirectory.Web.Areas.Identity.Data;
@using Dfc.CourseDirectory.Models.Enums
@model Dfc.CourseDirectory.Web.ViewModels.PublishCourses.PublishCompleteViewModel

<div class="govuk-panel govuk-panel--confirmation">
    @if (Model.Mode.Equals(PublishMode.BulkUpload))
    {
    <div class="govuk-panel__body">
        <h1 class="govuk-panel__title">
            Your file has been published
        </h1>

        You have added <strong>@Model.NumberOfCoursesPublished</strong> @(Model.NumberOfCoursesPublished.Equals(1) ? "course" : "courses") to the course directory
    </div>
    }

    @if (Model.Mode.Equals(PublishMode.Migration))
    {
        <div class="govuk-panel__body">
            <h1 class="govuk-panel__title">
                Migration complete
            </h1>
            You have published <strong>@Model.NumberOfCoursesPublished</strong> @(Model.NumberOfCoursesPublished.Equals(1) ? "course" : "courses") to the course directory.
        </div>
    }
</div>
<div class="Publish-Complete">
    <div class="govuk-!-margin-top-6">
        <h2 class="govuk-heading-l govuk-!-font-size-36">Next steps</h2>
    </div>
</div>
<div class="govuk-form-group">
    @Html.ActionLink("Back to the dashboard", "Index", "Home", new { }, new { @class = "govuk-link" })
</div>


