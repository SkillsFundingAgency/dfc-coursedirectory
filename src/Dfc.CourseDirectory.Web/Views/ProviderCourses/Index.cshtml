                if (result) {


                    HideValidationErrorMessage();
                    doSearch();
                   // $("#zCodeSearch").submit();
                }
                else {
                    //$providerSearchResultContainer.html("");
                    ShowValidationErrorMessage();
                }
            }

            $(document).keypress(function (e) {
