                    //    $courseId.addClass("govuk-accordion__section--expanded");
                    //}

                    //if (courseId !== "" || courseId !== undefined) {
                    //    $("html,body").animate({
                    //        scrollTop: $courseId.offset().top
                    //    }, "slow");
                    //}

                    if (courseRunId !== "" || courseRunId !== undefined) {
                        $("html,body").animate({
                            scrollTop: $courseRunId.offset().top
