
@using Dfc.CourseDirectory.Models.Enums
@using Dfc.CourseDirectory.Web.Helpers
@{
    Layout = "_Layout_Your_Courses";
}

@model Dfc.CourseDirectory.Web.ViewModels.ProviderCourses.CourseDeleteViewModel

<form class="govuk-!-margin-bottom-9" id="CourseConfirmDeleteForm" asp-controller="ProviderCourses" asp-action="DeleteCourse" method="post">
    @Html.HiddenFor(x => x.CourseId)
    @Html.HiddenFor(x => x.CourseRunId)
    @Html.HiddenFor(x => x.CourseName)
    <div class="cd-dashboard provider">

        <div id="errorsummary" class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary" style="display: none;">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
                There is a problem
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list"></ul>
            </div>
        </div>

        <h1 class="govuk-heading-l">
            Delete Course
        </h1>

        <table class="govuk-table">
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td class="govuk-table__header">Venue name</td>
                    <td class="govuk-table__cell">@Model.CourseName</td>
                </tr>
                @*<tr class="govuk-table__row">
                    <td class="govuk-table__header" scope="row">Address Line 1</td>
                    <td class="govuk-table__cell">@Model.AddressLine1</td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__header" scope="row">Postcode</td>
                    <td class="govuk-table__cell">@Model.PostCode</td>
                </tr>*@


            </tbody>
        </table>
        <div class="govuk-warning-text">
            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
            <strong class="govuk-warning-text__text">
                <span class="govuk-warning-text__assistive">Warning</span>
                Are you sure?
            </strong>
        </div>


        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                    <h1 class="govuk-fieldset__heading">
                        Please select
                    </h1>
                </legend>
                <div class="govuk-radios" val-required-message="Select an option" id="CourseConfirmDelete">

                    <div class="govuk-radios__item">
                        @Html.RadioButtonFor(m => m.CourseDelete, CourseDelete.Delete, new { @class = "govuk-radios__input", id = CourseDelete.Delete })
                        <label class="govuk-label govuk-radios__label" for="@CourseDelete.Delete">@WebHelper.GetEnumDescription(CourseDelete.Delete)</label>
                    </div>
                    <div class="govuk-radios__item">
                        @Html.RadioButtonFor(m => m.CourseDelete, CourseDelete.Back, new { @class = "govuk-radios__input", id = CourseDelete.Back })
                        <label class="govuk-label govuk-radios__label" for="@CourseDelete.Back">@WebHelper.GetEnumDescription(CourseDelete.Back)</label>
                    </div>

                </div>
            </fieldset>
        </div>

        <div class="cta-container">
            <a class="govuk-button govuk-!-margin-right-3" asp-controller="ProviderCourses" asp-action="DeleteCourse" id="Confirm" asp-route-CourseId=@Model.CourseId>Confirm</a>
        </div>
    </div>

</form>

<script>
    (function ($) {
        $(function () {
            var validStates = [];
            var $button = $("#Confirm");
            var $errorSummary = $("#errorsummary").govUkErrorSummary();
            var $courseConfirmDelete = $("#CourseConfirmDelete").govUkRadios();

            function isAllValid(currentValue) {
                return currentValue === true;
            }

            function validate() {

                validStates = [];
                $errorSummary.govUkErrorSummary("removeAll");
                $courseConfirmDelete.govUkRadios("validState");

                if ($.requiredValidate($courseConfirmDelete.find("input[type='radio']:checked").val())) {
                    $courseConfirmDelete.govUkRadios("validState");
                    validStates.push(true);
                } else {
                    $courseConfirmDelete.govUkRadios("invalidState", $courseConfirmDelete.attr("val-required-message"));
                    validStates.push(false);
                    var $anchor = document.createElement("a");
                    $anchor.href = "#CourseConfirmDelete";
                    $anchor.innerHTML = $courseConfirmDelete.attr("val-required-message");
                    $anchor.id = "error-hash-link-" + "a" + "-" + 1;
                    $errorSummary.govUkErrorSummary("add", $anchor);
                    $errorSummary.govUkErrorSummary("show");
                }
            }

            $button.on("click", function (event) {
                event.preventDefault();
                validate();
                if (validStates.every(isAllValid)) {
                    $("#CourseConfirmDeleteForm").submit();
                }
            });

        });
    })(jQuery);
</script>





