@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Identity
@using Dfc.CourseDirectory.Web.Areas.Identity.Data;
@using Dfc.CourseDirectory.Models.Enums
@model Dfc.CourseDirectory.Web.ViewModels.BulkUpload.PublishCompleteViewModel

@{
    Layout = "_Layout_Your_Courses";
}
@*might need to change model property as this is number of courses actually published, not what is live?*@
<div class="govuk-panel govuk-panel--confirmation">

    <div class="govuk-panel__body">
        <h1 class="govuk-panel__title">
            Publish complete
        </h1>

        You have @Model.NumberOfCoursesPublished @(Model.NumberOfCoursesPublished.Equals(1) ? "course" : "courses") listed on the course directory
    </div>
</div>

<div class="govuk-form-group">
    @Html.ActionLink("Back to the dashboard", "Index", "Home", new { }, new { @class = "govuk-link" })
</div>


