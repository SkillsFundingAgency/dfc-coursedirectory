@using Dfc.CourseDirectory.Web.ViewComponents.PostcodeLookup;
@model Dfc.CourseDirectory.Web.ViewComponents.AddVenue.AddVenueModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="postCodeSearchResultForm" asp-controller="Venue" asp-action="ConfirmSelection" method="post">
    <div class="add-venue">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <div class="govuk-form-group" style="clear:both;">
                    <label class="govuk-label" for="sub">
                        Venue name
                    </label>
                    <input class="govuk-input" id="name" name="name" type="text">
                </div>
                <div id="PostcodeLookupContainer">
                    @await Component.InvokeAsync(nameof(PostcodeLookup), new PostcodeLookupModel())
                </div>
                <div class="govuk-form-group">
                    <button type="submit" class="govuk-button" id="">
                        Continue
                    </button>
                </div>
                <div class="govuk-form-group">
                    <a class="govuk-link" asp-controller="Venue" asp-action="AddAddressManually">I cannot find my post code</a>
                </div>
            </div>
        </div>
    </div>
</form>