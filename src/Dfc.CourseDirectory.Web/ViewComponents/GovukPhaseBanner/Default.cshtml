@model Dfc.CourseDirectory.Web.ViewComponents.GovukPhaseBanner.GovukPhaseBannerModel;

@if (Model.IsVisible)
{
    <div class="govuk-phase-banner">
        <p class="govuk-phase-banner__content">
            <strong class="govuk-tag govuk-phase-banner__content__tag ">
                @Model.Tag
            </strong>
            <span class="govuk-phase-banner__text">
                This is a new service – your
                <a class="govuk-link" href="@Model.LinkUrl">@Model.LinkText</a> will help us to improve it.
            </span>
        </p>
    </div>
}