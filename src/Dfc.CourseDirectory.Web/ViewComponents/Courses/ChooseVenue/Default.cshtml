@using Dfc.CourseDirectory.Models.Models.Courses;
@using Dfc.CourseDirectory.Web.Helpers;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Dfc.CourseDirectory.Web.ViewComponents.Courses.ChooseVenue.ChooseVenueModel



<div class="govuk-form-group">
    <label id="govuk-label-@nameof(@Model.VenueId)" class="govuk-label" asp-for="@Model.LabelText">
        @Model.LabelText
    </label>
    @if (!string.IsNullOrWhiteSpace(Model.HintText))
    {
        <span class="govuk-hint">
            @Model.HintText
        </span>
    }


<div class="">
    <select asp-for="@Model.VenueId" asp-items="@Model.Venues" class="govuk-select" val-required-message="Select venue"></select>

    @Html.ActionLink("Add a new venue", "AddVenue", "Venues", new { }, new { @class = "govuk-link" })
</div>
</div>

<script>
