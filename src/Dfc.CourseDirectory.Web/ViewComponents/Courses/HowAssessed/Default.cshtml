@using Dfc.CourseDirectory.Common.Settings
@using Microsoft.Extensions.Options
@model Dfc.CourseDirectory.Web.ViewComponents.Courses.HowAssessed.HowAssessedModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IOptions<HowAssessedComponentSettings> howAssessedComponentSettings

@{
    var regex = @"[a-zA-Z0-9 /\r\n?|\n\¬\!\£\$\%\^\&\*\(\)_\+\-\=\{\}\[\]\;\:\@\'\#\~\,\<\>\.\?\/\|\`\" + "\"" + @"\\]+";
}
<div class="govuk-form-group">
    <div class="govuk-character-count" data-module="character-count" data-maxlength=@howAssessedComponentSettings.Value.TextFieldMaxChars>
        <div class="govuk-form-group" style="margin-bottom: 0;padding-bottom: 0">
            <label class="govuk-label" for="how-assessed">
                @Model.LabelText
            </label>
            <span id="course-for-hint" class="govuk-hint">
                @Model.HintText
            </span>
            <textarea asp-for="HowAssessed" class="govuk-textarea js-character-count" id="textAreaHowAssessed" name="HowAssessed" rows="5"  type="text" 
                      aria-describedby="@Model.AriaDescribedBy"
                      val-max-length="500" val-max-length-message="How you’ll be assessed' must be 500 characters or less"
                      val-regex="@regex"
                      val-regex-message="How you’ll be assessed contains invalid characters"></textarea>
        </div>
    </div>
</div>
