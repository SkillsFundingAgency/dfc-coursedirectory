@using Dfc.CourseDirectory.Common.Settings
@using Microsoft.Extensions.Options
@model Dfc.CourseDirectory.Web.ViewComponents.Courses.HowAssessed.HowAssessedModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IOptions<HowAssessedComponentSettings> howAssessedComponentSettings



@{
    var regex = @"^[a-zA-Z0-9 /\n/\r/\¬\!\£\$\%\^\&\*\(\)_\+\-\=\{\}\[\]\;\:\@\'\#\~\,\<\>\.\?\/\|\`" + "\"" + "\\\\]+$";
    var howAssessedTextFieldMaxChars = howAssessedComponentSettings.Value.TextFieldMaxChars;
}



<div class="govuk-character-count" data-module="character-count" data-maxlength=@howAssessedTextFieldMaxChars>
    <div class="govuk-form-group">
        <label class="govuk-label" for="word-count">
            @Model.LabelText
        </label>
        @if (!string.IsNullOrWhiteSpace(Model.HintText))
        {
            <span class="govuk-hint">
                @Model.HintText
            </span>
        }
        <textarea class="govuk-textarea js-character-count " asp-for="@Model.HowAssessed" rows="5"
                     aria-describedby="@Model.AriaDescribedBy"
                          val-max-length=@howAssessedTextFieldMaxChars val-max-length-message="How you’ll be assessed must be @howAssessedTextFieldMaxChars characters or less"
                          val-regex="@regex"
                          val-regex-message="How you’ll be assessed contains invalid characters"></textarea>

    </div>
</div>

