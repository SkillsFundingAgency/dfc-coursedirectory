<div class="govuk-character-count" data-module="character-count" data-maxlength=@courseForComponentSettings.Value.TextFieldMaxChars>
    <div class="govuk-form-group">
        <label class="govuk-label" for="word-count">
            @Model.LabelText
        </label>
        @if (!string.IsNullOrWhiteSpace(Model.HintText))
        {
            <span class="govuk-hint">
                @Model.HintText
            </span>
        }
        <textarea class="govuk-textarea js-character-count " asp-for="@Model.CourseFor" rows="5"
                  aria-describedby="@Model.AriaDescribedBy"
                      val-required-message="Enter Course Name"
                      val-max-length="2000" val-max-length-message="Who is this course for must be 2000 characters or less"
                      val-regex="@regex"
                      val-regex-message="Course for contains invalid characters"></textarea>

    </div>
</div>
