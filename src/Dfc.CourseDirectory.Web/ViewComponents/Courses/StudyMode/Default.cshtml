@using Dfc.CourseDirectory.Models.Models.Courses;
@using Dfc.CourseDirectory.Web.Helpers;

@model Dfc.CourseDirectory.Web.ViewComponents.Courses.StudyMode.StudyModeModel


<div class="govuk-form-group">

    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--s" style="font-weight: 100;">
            <h1 class="govuk-fieldset__heading">
                @Model.LabelText
            </h1>
            <span class="govuk-hint">@Model.HintText</span>
        </legend>
        <div class="govuk-radios govuk-radios--inline" val-required-message="Select study mode" id="StudyModeRadioButtons">

            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.StudyMode, StudyMode.FullTime, new { @class = "govuk-radios__input", id = StudyMode.FullTime })
                <label class="govuk-label govuk-radios__label" for="@StudyMode.FullTime">@WebHelper.GetEnumDescription(StudyMode.FullTime)</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.StudyMode, StudyMode.PartTime, new { @class = "govuk-radios__input", id = StudyMode.PartTime })
                <label class="govuk-label govuk-radios__label" for="@StudyMode.PartTime">@WebHelper.GetEnumDescription(StudyMode.PartTime)</label>
            </div>
            <div class="govuk-radios__item">
                @Html.RadioButtonFor(m => m.StudyMode, StudyMode.Flexible, new { @class = "govuk-radios__input", id = StudyMode.Flexible })
                <label class="govuk-label govuk-radios__label" for="@StudyMode.Flexible">@WebHelper.GetEnumDescription(StudyMode.Flexible)</label>
            </div>

        </div>
    </fieldset>
</div>


