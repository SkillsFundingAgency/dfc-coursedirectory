@using Dfc.CourseDirectory.Web.ViewComponents.PostCodeSearch;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Dfc.CourseDirectory.Web.ViewComponents.PostCodeSearch.PostCodeSearchModel;


<div class="govuk-grid-row">

    <div class="govuk-grid-column-full">

        <fieldset class="govuk-fieldset">
            <h2 class="govuk-heading-m">
                Venue address
            </h2>
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">

            </legend>

            <div class="govuk-form-group">
                <label class="govuk-label" for="address-postcode">
                    Venue postcode
                </label>
                <span asp-validation-for="PostCode"></span>

                <input class="govuk-input govuk-input--width-10" asp-for="PostCode"
                       autocomplete="off"
                       type="text"
                       value="@Model.PostCode" />
            </div>

            <button class="govuk-button" id="postcode-search" type="button">
                Find address
            </button>
            <br>

        </fieldset>

      
        <a class="govuk-link" href="AddVenueManual">Enter address manually</a>
		
    </div>	

</div>

