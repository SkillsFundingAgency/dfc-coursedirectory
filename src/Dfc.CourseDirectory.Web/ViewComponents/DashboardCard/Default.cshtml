@model Dfc.CourseDirectory.Web.ViewComponents.DashboardCard.DashboardCardModel
@using Dfc.CourseDirectory.Web.Helpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="cd-migration-panel">
    <h2 class="cd-migration-panel__title">@Model.Title</h2>
    <span class="cd-migration-panel__number">
        @if (Model.Value == 0)
        {
            @Model.Value
        }
        else
        {
            <a href="@Model.ValueHref" class="govuk-link">@Model.Value</a>
        }

    </span>
    <span> @Model.Description</span><br />
    <br />
</div>

<ul class="govuk-list cd-homepage__list">
    @foreach (var item in Model.Links)
    {
        if (!string.IsNullOrWhiteSpace(item.Href))
        {
            <li class="cd-homepage__list--item">
                <a href="@item.Href" class="govuk-link">@item.Description</a>
            </li>
        }
    }
</ul>
