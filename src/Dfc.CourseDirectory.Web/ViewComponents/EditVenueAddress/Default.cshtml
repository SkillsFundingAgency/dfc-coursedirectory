@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Dfc.CourseDirectory.Web.ViewComponents.PostcodeLookup
@model Dfc.CourseDirectory.Web.ViewComponents.EditVenueAddress.EditVenueAddressModel
@*For Data Persistence*@

<form id="edit-venue-address-search-form" asp-controller="Venues" asp-action="VenueAddressSelectionConfirmation" method="post">
    @Html.HiddenFor(x => x.Address)
    @Html.HiddenFor(x => x.VenueName)

    <div id="edit-venue">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">

                <div class="govuk-form-group" style="clear:both;">
                    <div class="govuk-form-group">
                        <div class="govuk-form-group">
                            <div id="VenueNameContainer">
                                @await Component.InvokeAsync(nameof(PostcodeLookup), new PostcodeLookupModel
                                {
                                    Postcode = Model.Address.Postcode,
                                    PostcodeLabelText = "Venue postcode",
                                    PostcodeAriaDescribedBy = "Please enter the postcode.",
                                    ButtonText = "Find address"
                                })

                            </div>
                        </div>
                    </div>
                    <div class="govuk-form-group">
                        <a id="manualLink" class="govuk-link" asp-controller="Venues" asp-action="AddVenueManualAddress">Enter address manually</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
