@model Dfc.CourseDirectory.Web.ViewComponents.Dashboard.DashboardModel
@using Dfc.CourseDirectory.Web.Helpers
@using Dfc.CourseDirectory.Web.ViewComponents.DashboardCard
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@await Component.InvokeAsync(nameof(DashboardCard), new DashboardCardModel()
{
    Title = "Manage",
    Title2="your apprenticeship training",
    Value = Model.PublishedApprenticeshipsCount,
    Description = @WebHelper.GetApprenticeshipsTextToUse(Model.PublishedApprenticeshipsCount),
    ValueHref = Url.Action("index", "ProviderApprenticeships"),
    Links = new List<DashboardCardModel.Link>()

{
new DashboardCardModel.Link(Url.Action("Index","Apprenticeships"),"Add new apprenticeship training"),
new DashboardCardModel.Link((0 == Model.PublishedApprenticeshipsCount)?"":Url.Action("Index","ProviderApprenticeships"),"View, edit or delete an apprenticeship training"),
new DashboardCardModel.Link(Url.Action("ApprenticeshipIndex","Bulkupload"),"Bulk upload apprenticeship training information"),
}

})
