@model Dfc.CourseDirectory.Web.ViewComponents.AdvancedLearnerLoan.AdvancedLearnerLoanModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="govuk-form-group">
    <fieldset class="govuk-fieldset" aria-describedby="advanced-learner-hint">
        <label class="govuk-label" for="sub">
            @Model.LabelText
        </label>
        <span id="more-detail-hint" class="govuk-hint">@Model.HintText</span>
        <div class="govuk-checkboxes">
            <div class="govuk-checkboxes__item">
                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.AdvancedLearnerLoan">
                <label class="govuk-label govuk-checkboxes__label">
                    Available
                </label>
            </div>
        </div>
    </fieldset>
</div>