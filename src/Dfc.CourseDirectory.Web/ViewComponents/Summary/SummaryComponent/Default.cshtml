@model Dfc.CourseDirectory.Web.ViewComponents.Summary.SummaryComponent.SummaryComponentModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
        @Model.Title
    </dt>
    <dd class="govuk-summary-list__value" style="word-break: break-word;">
        @Model.Value
    </dd>
    @if (Model.HideChangeLink)
    {
        <dd class="govuk-summary-list__actions govuk-summary-list__checkedit">
            &nbsp;
        </dd>
    }
    else
    {
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="@Url.Action( Model.Action , Model.Controller)#@Model.Section">
                Change
                <span class="govuk-visually-hidden"> @Model.Title</span>
            </a>
        </dd>
    }
</div>
