@using Dfc.CourseDirectory.Web.ViewComponents.Extensions
@using Dfc.CourseDirectory.Web.ViewComponents.Pagination;
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using Dfc.CourseDirectory.Web.Areas.Identity.Data;
@using Microsoft.AspNetCore.Authorization;


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Dfc.CourseDirectory.Web.ViewComponents.ZCodeSearchResult.ZCodeSearchResultModel;


@foreach (var item in Model.Items)
{
<form asp-controller="AddCourse" asp-action="AddCourse" asp-route-learnAimRef="@Model.Items.FirstOrDefault()?.LearnAimRef" asp-route-notionalNVQLevelv2="@Model.Items.FirstOrDefault()?.NotionalNVQLevelv2" asp-route-awardOrgCode="@Model.Items.FirstOrDefault()?.AwardOrgCode" asp-route-learnAimRefTitle="@Model.Items.FirstOrDefault()?.LearnAimRefTitle" asp-route-learnAimRefTypeDesc="@Model.Items.FirstOrDefault()?.LearnAimRefTypeDesc">
    <div class=" govuk-!-margin-top-4 ">
        <div class="">
            <h2 class="provision-title govuk-heading-l">
                @Model.Items.FirstOrDefault()?.LearnAimRefTitle
            </h2>
            <span>LARS/QAN :</span> <span>@Model.Items.FirstOrDefault()?.LearnAimRef</span><br />
            <span>Level :</span> <span>@Model.Items.FirstOrDefault()?.NotionalNVQLevelv2</span><br />


            @Html.ActionLink("Add this provison", "AddCourse", "AddCourse", new { @Model.Items.FirstOrDefault()?.LearnAimRef, @Model.Items.FirstOrDefault()?.NotionalNVQLevelv2, @Model.Items.FirstOrDefault()?.AwardOrgCode, @Model.Items.FirstOrDefault()?.LearnAimRefTitle, @Model.Items.FirstOrDefault()?.LearnAimRefTypeDesc }, new { @class = "govuk-link" })

        </div>
        <br />

    </div>

    

</form>
}